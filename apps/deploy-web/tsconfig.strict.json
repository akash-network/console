    "**/*.d.ts",
    "./src/types/**/*.ts",
    "./src/utils/**/*.ts",
    "./src/store/**/*.ts",
    "./src/services/**/*.ts",
    "./src/chains/**/*.ts",
    "./src/config/**/*.ts",
    "./src/lib/**/*.ts",
    "./src/lib/**/*.tsx",
