{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@src/*": ["./src/*"]
    },
    "noEmit": true,
    "target": "es2022",
    "useDefineForClassFields": false,
    "module": "NodeNext",
    "lib": ["esnext"],
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true
  },
  "exclude": ["node_modules", "dist"],
  "extends": "@akashnetwork/dev-config/tsconfig.base-node.json",
  "include": ["src/**/*"]
}
