{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "target": "es2018",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "extends": "@akashnetwork/dev-config/tsconfig.base-next.json",
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
