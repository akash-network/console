{
  "exclude": ["node_modules", "dist", "**/*spec.ts"],
  "extends": "./tsconfig.build.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": false,
    "module": "NodeNext",
    "lib": ["esnext"],
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true
  }
}
